@model HomeIndexViewModel

@{
    ViewBag.Title = "Index";
}


<table class="table-condensed">
    <tr>
        @foreach (var item in Model.RepairStatus)
        {
            <td width="25%">
                @item.Key: @item.Value
            </td>
        }
    </tr>
</table>
<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
