    @foreach (var item in Model.RepairJobs)
    {
	    <tr style="@(item.IsLate ? "background-color : OrangeRed" : "background-color : White")">
            <td>
                @Html.Label(item.Id.ToString())
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                <div class="form-group">
                    @Html.LabelFor(modelItem => item.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EnumDropDownListFor(model => item.Status, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => item.Status, "", new { @class = "text-danger" })
                    </div>
                </div>
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new {Update = item })
            </td>
        </tr>
    }

</table>
